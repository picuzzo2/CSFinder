@model CSFinder.Models.StudentAccount
@{
    ViewData["Title"] = "RegisStudent";
    Layout = null;
}


@using (Html.BeginForm("RegisStudent", "RegisLogin", FormMethod.Post))

{
    <style>
        .RegisStudent {
            padding: 20px;          
        }
        .ID{
            padding-right: 110px;
        }
        .Password{
            padding-right: 65px;
        }
        .confirmPassword{
            padding-right: 15px;
        }
        .SID{
            padding-right: 100px;
        }
        .Name{
            padding-right: 85px;
        }
        .Email{
            padding-right: 85px;
        }
        .Phone{
            padding-right: 85px;
        }
        .Detail{
            padding-right: 85px;
        }
        .button{
            margin-left:20px;
        }
    </style>

    <div class="RegisStudent">
        <table>
            <tr>
                <td class="ID" >@Html.LabelFor(a => a.account.ID)</td>
                <td>@Html.TextBoxFor(a => a.account.ID)</td>
                <td>@Html.ValidationMessageFor(a => a.student.ID)</td>
            </tr>
        </table>
    </div>
    <div class="RegisStudent">
        <table>
            <tr>
                <td class="Password">@Html.LabelFor(a => a.account.Password)</td>
                <td>@Html.PasswordFor(a => a.account.Password)</td>
                <td>@Html.ValidationMessageFor(a => a.account.Password)</td>
            </tr>
        </table>
    </div>
    <div class="RegisStudent">
        <table>
            <tr>
