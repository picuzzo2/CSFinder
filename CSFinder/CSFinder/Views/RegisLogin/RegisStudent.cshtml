                <td>@Html.PasswordFor(a => a.confirmPassword)</td>
                <td>@Html.ValidationMessageFor(a => a.confirmPassword)</td>
            </tr>
        </table>
    </div>
    <div class="RegisStudent">
        <table>
            <tr>
                <td class="SID">@Html.LabelFor(a => a.student.SID)</td>
                <td>@Html.TextBoxFor(a => a.student.SID)</td>
                <td>@Html.ValidationMessageFor(a => a.student.SID)</td>
            </tr>
        </table>
    </div>
    <br>
    <div class="RegisStudent">
        <table>
            <tr>
                <td class="Name">@Html.LabelFor(a => a.student.Name)</td>
                <td>@Html.TextBoxFor(a => a.student.Name)</td>
