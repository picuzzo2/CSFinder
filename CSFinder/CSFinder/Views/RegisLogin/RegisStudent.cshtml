            </tr>
        </table>
    </div>
    <br>
    <div class="RegisStudent">
        <table>
            <tr>
                <td class="Email">@Html.LabelFor(a => a.student.Email)</td>
                <td>@Html.TextBoxFor(a => a.student.Email)</td>
                <td>@Html.ValidationMessageFor(a => a.student.Email)</td>
            </tr>
        </table>
    </div>
    <br>
    <div class="RegisStudent">
        <table>
            <tr>
                <td class="Phone">@Html.LabelFor(a => a.student.Phone)</td>
                <td>@Html.TextBoxFor(a => a.student.Phone)</td>
                <td>@Html.ValidationMessageFor(a => a.student.Phone)</td>
            </tr>
        </table>
    </div>
    <br>
    <div class="RegisStudent">
        <table>
            <tr>
                <td class="Detail">@Html.LabelFor(a => a.student.Detail)</td>
                <td>@Html.TextBoxFor(a => a.student.Detail)</td>
